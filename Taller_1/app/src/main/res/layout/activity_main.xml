<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <Spinner
        android:id="@+id/spinnerTodos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonExpDest"
        android:layout_centerInParent="true"
        android:entries="@array/categoriasViajes"/>

    <Button
        android:id="@+id/buttonExpDest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/explorar_destinos" />

    <Button
        android:id="@+id/buttonFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favoritos"
        android:layout_centerInParent="true"
        android:layout_below="@id/buttonExpDest"/>

    <Button
        android:id="@+id/buttonRecom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recomendaciones"
        android:layout_centerInParent="true"
        android:layout_below="@id/buttonFav"/>

</RelativeLayout>